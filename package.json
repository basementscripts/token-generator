{
	"name": "@basementscripts/token-generator",
	"description": "Node.js token generator",
	"version": "0.1.1",
	"main": "lib/index.js",
	"typings": "lib/index.d.ts",
	"directories": {
		"lib": "lib",
		"test": "__tests__"
	},
	"files": [
		"lib"
	],
	"scripts": {
		"build": "yarn tsc",
		"tsc": "rm -rf lib && tsc",
		"watch": "nodemon --watch src --ext ts --exec yarn tsc",
		"test": "NODE_ENV=test jest --forceExit --detectOpenHandles --coverage --verbose",
		"test:watch": "yarn test --watchAll",
		"badge": "make-coverage-badge --output-path ./badge.svg"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/basementscripts/token-generator.git"
	},
	"publishConfig": {
		"registry": "https://npm.pkg.github.com/"
	},
	"author": "BasementScripts <basementscripts.io@gmail.com>",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^13.9.1",
		"jest": "^26.6.3",
		"make-coverage-badge": "^1.2.0",
		"nodemon": "^2.0.6",
		"ts-node": "^8.6.2",
		"typescript": "^3.8.3"
	},
	"prettier": {
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 2,
		"semi": false,
		"singleQuote": true,
		"flattenTernaries": true,
		"printWidth": 100
	},
	"jest": {
		"collectCoverageFrom": [
			"lib/*.js",
			"!**/node_modules/**"
		],
		"coverageReporters": [
			"json-summary",
			"text"
		],
		"coverageDirectory": "./coverage"
	},
	"contributors": [
		{
			"name": "Justin Anderson",
			"email": "justinandersonca@gmail.com"
		}
	]
}
